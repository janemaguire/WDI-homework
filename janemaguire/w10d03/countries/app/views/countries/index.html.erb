<p id="notice"><%= notice %></p>

<h1>All Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Size</th>
      <th>Population</th>
      <th>Language</th>
      <th>Continent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= image_tag country.image, width: 100 %></td>
        <td><%= number_with_delimiter(country.size, :delimiter => ',') %> km sq</td>
        <td><%= number_with_delimiter(country.population, :delimiter => ',') %></td>
        <td><%= country.language %></td>
        <td><%= country.continent.name %></td>
        <td class="link"><%= link_to 'Show', country %></td>
        <td class="link"><%= link_to 'Edit', edit_country_path(country) %></td>
        <td class="link"><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

