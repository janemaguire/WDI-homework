<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @country.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @country.image, width: 100 %>
</p>

<p>
  <strong>Size:</strong>
  <%= number_with_delimiter(@country.size, :delimiter => ',') %> km sq
</p>

<p>
  <strong>Population:</strong>
  <%= number_with_delimiter(@country.population, :delimiter => ',') %>
</p>

<p>
  <strong>Language:</strong>
  <%= @country.language %>
</p>

<p>
  <strong>Continent:</strong>
  <%= @country.continent.name %>
</p>

<%= link_to 'Edit', edit_country_path(@country) %> |
<%= link_to 'Back', countries_path %>
