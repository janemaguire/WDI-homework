<main class="container">
  <form action="/quotes/<%= quote.id %>" method="post">
    <input type="hidden" name="_name" value="put">

    <div class="form-group">
      <label for="quote_text">Quote</label>
      <input type="text" class="form-control" id="quote_text" name="quote[text]" value="<%= quote.text %>"
    </div>

    <div class="form-group">
      <label for="newName">Name</label>
      <input type="text" class="form-control" id="newName" name="quote[name]" value="<%= quote.name %>">
    </div>

    <button class="btn btn-primary" id="save">Save quote</button>

  </form>
</main>
