<!DOCTYPE html>
<html>
  <head>
    <title>Yass Queen</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar" role="navigation">
        <ul class="nav nav-pills">
          <% if logged_in? %>
            <li class="msg" role="presentation">Hello <%= current_user.username %>, welcome to Yass Queen</li>
          <% end %>

          <li role="presentation" class="active"><%= link_to "Venues", venues_path %></li>
          <li role="presentation" class="active"><%= link_to "Queens", root_path %></li>

          <% if logged_in? %>
            <li><%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Are you sure?'} %></li>
          <% else %>
            <li role="presentation"><%= link_to "Register", register_path %></li>
            <li role="presentation"><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <% flash.each do |name, message| %>
      <div class="flash-message flash-message-<%= name %>">
    <%= message %>
  </div>
<% end %>
  <main>
    <%= yield %>
  </main>
  </body>
</html>
